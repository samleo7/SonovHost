<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">

            <stroke
                android:color="#7CFFFFFF"
                android:width="1dp"/>

            <padding
                android:right="1dp"
                android:bottom="1.5dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="oval">

            <gradient
                android:angle="270"
                android:startColor="#CEE8E6E6"
                android:centerColor="#AE010E4C"
                android:endColor="#BA396DF3" />
            <size
                android:width="48dp"
                android:height="48dp" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="#ffff"/>
            <corners android:radius="20dp" />
            <size
                android:width="32dp"
                android:height="4dp" />
        </shape>
    </item>

    <item android:gravity="center">
        <rotate
            android:fromDegrees="90">
            <shape android:shape="rectangle">
                <solid android:color="#ffff"/>
                <corners android:radius="20dp" />
                <size
                    android:width="32dp"
                    android:height="4dp" />
            </shape>
        </rotate>
    </item>

</layer-list>